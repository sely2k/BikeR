        <!--TODO: Content should be placed within the following grid-->
        <!--<Grid Grid.Row="1" x:Name="ContentRoot" Margin="19,9.5,19,0">-->
        <StackPanel Margin="0,0,0,50" VerticalAlignment="Bottom">
            <Button 
                x:Name="btnFacebookLogin" 
                Tapped="btnFacebookLogin_Tapped"  
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Center" 
                BorderBrush="White" 
                Foreground="#FFFAFAFA" 
                Height="70" 
                Background="#FF566FA5" 
                Padding="0" 
                BorderThickness="0,0,5,0" 
                Margin="25,0" MinHeight="50" 
                HorizontalContentAlignment="Left" >
       
                
                <StackPanel 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center">
                    <Image 
                        
                        Height="50" 
                        Width="50" 
                        Source="Assets/SmallLogo.png" 
                        Margin="0" />
                    
                    <TextBlock 
                        
                        Text="Login With Facebook" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="25,0,0,0" />
           
       
               
                    
                </StackPanel>

            </Button>
            <Button 
                x:Name="btnGoogle" 
                Tapped="btnGoogleLogin_Tapped"                 HorizontalAlignment="Stretch" 
                VerticalAlignment="Center" 
                BorderBrush="White" 
                Foreground="#FFFAFAFA" 
                Height="70" 
                Background="#FF7F92F0" 
                Padding="0" 
                BorderThickness="0,0,5,0" 
                Margin="25,0" MinHeight="50" 
                HorizontalContentAlignment="Left" >


                <StackPanel 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center">
                    <Image 
                        
                        Height="50" 
                        Width="50" 
                        Source="Assets/SmallLogo.png" 
                        Margin="0" />

                    <TextBlock 
                        
                        Text="Login With Google" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="25,0,0,0" />




                </StackPanel>

            </Button>
            <Button 
                x:Name="btnTwitter" 
                Tapped="btnTwitterLogin_Tapped"                 HorizontalAlignment="Stretch" 
                VerticalAlignment="Center" 
                BorderBrush="White" 
                Foreground="#FFFAFAFA" 
                Height="70" 
                Background="#FF44A6EC" 
                Padding="0" 
                BorderThickness="0,0,5,0" 
                Margin="25,0" MinHeight="50" 
                HorizontalContentAlignment="Left" >


                <StackPanel 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center">
                    <Image 
                        
                        Height="50" 
                        Width="50" 
                        Source="Assets/SmallLogo.png" 
                        Margin="0" />

                    <TextBlock 
                        
                        Text="Login With Twitter" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="25,0,0,0" />




                </StackPanel>

            </Button>

        </StackPanel>

        <!--</Grid>-->
    </Grid>
