        <!--TODO: Content should be placed within the following grid-->
        <!--<Grid Grid.Row="1" x:Name="ContentRoot" Margin="19,9.5,19,0">-->
        <StackPanel Margin="0,0,0,50" VerticalAlignment="Bottom">
            <Button 
                x:Name="btnFacebookLogin" 
                Tapped="btnFacebookLogin_Tapped"  
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Center" 
                BorderBrush="White" 
                Foreground="#FFFAFAFA" 
                Height="70" 
                Background="#FF1E4389" 
                Padding="0" 
                BorderThickness="0,0,5,0" 
                Margin="25,0" MinHeight="50" 
                HorizontalContentAlignment="Left" >


                <StackPanel 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center">
                    <Image 
                        
                        Height="50" 
                        Width="50" 
                        Source="Assets/SmallLogo.png" 
                        Margin="0" />

                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Margin="25,0,0,0"  >
                    	<Run Text="Sign in with "/>
                    	<Run FontWeight="Bold" Text="Facebook"/>
                    </TextBlock>




                </StackPanel>

            </Button>
            <Button 
                x:Name="btnGoogle" 
                Tapped="btnGoogleLogin_Tapped"                 HorizontalAlignment="Stretch" 
                VerticalAlignment="Center" 
                BorderBrush="White" 
                Foreground="#FFFAFAFA" 
                Height="70" 
                Background="#FFD5482C" 
                Padding="0" 
                BorderThickness="0,0,5,0" 
                Margin="25,0" MinHeight="50" 
                HorizontalContentAlignment="Left" >


                <StackPanel 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center">
                    <Image 
                        
                        Height="50" 
                        Width="50" 
                        Source="Assets/SmallLogo.png" 
                        Margin="0" />

                    <TextBlock 
                        
                        Text="Sign in with Google Account" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="25,0,0,0" FontWeight="Bold" />




                </StackPanel>

            </Button>
            <Button 
                x:Name="btnTwitter" 
                Tapped="btnTwitterLogin_Tapped"                 HorizontalAlignment="Stretch" 
                VerticalAlignment="Center" 
                BorderBrush="White" 
                Foreground="#FFFAFAFA" 
                Height="70" 
                Background="#FF28AAE1" 
                Padding="0" 
                BorderThickness="0,0,5,0" 
                Margin="25,0" MinHeight="50" 
                HorizontalContentAlignment="Left" >


                <StackPanel 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center">
                    <Image 
                        
                        Height="50" 
                        Width="50" 
                        Source="Assets/SmallLogo.png" 
                        Margin="0" />

                    <TextBlock 
                        
                        Text="Sign in with Twitter" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left" 
                        Margin="25,0,0,0" 
                        FontWeight="Bold" />




                </StackPanel>

            </Button>
            <Button 
                x:Name="btnMicrosoft" 
                Tapped="btnMictosoftLogin_Tapped"                 HorizontalAlignment="Stretch" 
                VerticalAlignment="Center" 
                BorderBrush="White" 
                Foreground="#FFFAFAFA" 
                Height="70" 
                Background="#FF29AAE0" 
                Padding="0" 
                BorderThickness="0,0,5,0" 
                Margin="25,0" MinHeight="50" 
                HorizontalContentAlignment="Left" >


                <StackPanel 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center">
                    <Image 
                        
                        Height="50" 
                        Width="50" 
                        Source="Assets/SmallLogo.png" 
                        Margin="0" />

                    <TextBlock 
                        
                        Text="Sign in with Live ID" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="25,0,0,0" FontWeight="Bold" />




                </StackPanel>

            </Button>


        </StackPanel>

        <!--</Grid>-->
    </Grid>
