        </LinearGradientBrush.RelativeTransform>

        <GradientStop Offset="0" Color="#FF00A650" />
        <GradientStop Offset="0.5" Color="#FF00A650" />

        <GradientStop Offset="0.5" Color="#FF6DC8BF" />
        <GradientStop Offset="1" Color="#FF6DC8BF" />
    </LinearGradientBrush>
